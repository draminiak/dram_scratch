{
  "name": "mplus-cdk",
  "version": "0.0.1",
  "private": true,
  "description": "CI/CD commands",
  "author": "devops@t-3.com",
  "license": "UNLICENSED",
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=18.17.0"
  },
  "config": {
    "awsCliVersion": "2.4.27",
    "awsProfile": "devops-dram",
    "yarnVersion": "1.22.19",
    "stackPath": "dram"
  },
  "repository": {
    "url": "https://gitlab.t-3.com/devops/t3-cdk",
    "type": "git"
  },
  "scripts": {
    "audit": "yarn audit",
    "aws:cli-install": "curl \"https://awscli.amazonaws.com/awscli-exe-linux-x86_64-${npm_package_config_awsCliVersion}.zip\" -o \"awscliv2.zip\" && unzip awscliv2.zip && (./aws/install || ./aws/install --update)",
    "aws:config": "echo ${AWS_ACCOUNT_ID:-awsAcct}; yarn aws:config-id; yarn aws:config-secret; yarn aws:config-region",
    "aws:config-id": "aws configure --profile $npm_package_config_awsProfile set aws_access_key_id ${AWS_ACCESS_KEY_ID:-awsID}",
    "aws:config-secret": "aws configure --profile $npm_package_config_awsProfile set aws_secret_access_key ${AWS_SECRET_ACCESS_KEY:-awsSECRET}",
    "aws:config-region": "aws configure --profile $npm_package_config_awsProfile set default.region ${AWS_REGION:-us-east-1}",
    "aws:co-login": "aws codeartifact login --tool npm --repository ${AWS_CODEARTIFACT_REPO} --namespace ${AWS_CODEARTIFACT_NAMESPACE} --domain ${AWS_CODEARTIFACT_DOMAIN} --domain-owner ${AWS_ACCOUNT_ID}",
    "aws:ecr-login": "aws ecr get-login-password --region ${AWS_REGION} | docker login -u AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com",
    "aws:cdk-bootstrap": "cd ${npm_package_config_stackPath} && npx aws-cdk bootstrap --profile $npm_package_config_awsProfile --verbose aws://${AWS_ACCOUNT_ID}/${AWS_REGION} && cd ..",
    "aws:cdk-synth": "cd ${npm_package_config_stackPath} && npx aws-cdk synth --profile $npm_package_config_awsProfile --require-approval=never && cd ..",
    "aws:cdk-deploy": "cd ${npm_package_config_stackPath} && npx aws-cdk deploy ${STACK_NAME:---all} --profile $npm_package_config_awsProfile --require-approval=never && cd ..",
    "aws:cdk-destroy": "cd ${npm_package_config_stackPath} && npx aws-cdk destroy ${STACK_NAME:---all} --profile $npm_package_config_awsProfile --force && cd ..",
    "build:ts": "tsc --pretty",
    "install:dev": "yarn install --production=false --no-lockfile --cache-folder .yarn-cache",
    "install:dev-from-lock": "yarn install --production=false --frozen-lockfile --cache-folder .yarn-cache",
    "install:prod": "yarn install --production --cache-folder .yarn-cache",
    "install:prod-from-lock": "yarn install --production --frozen-lockfile --cache-folder .yarn-cache",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "version-set": "yarn policies set-version $npm_package_config_yarnVersion"
  },
  "resolutions": {},
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "prettier": ">=2.8.8",
    "ts-jest": "^29.1.0",
    "tslint": "^6.1.3",
    "tslint-config-blvd": "^1.2.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.5.1",
    "aws-cdk": "^2.92.0",
    "aws-cdk-lib": "^2.92.0",
    "constructs": "10.2.69",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "uuidv4": "^6.2.13"
  }
}
